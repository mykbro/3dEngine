<Window x:Class="_3dGraphics.Windows.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3dGraphics.Windows"
        mc:Ignorable="d"
        Title="Console" Height="400" Width="300" Loaded="Window_Loaded">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <TextBlock Name="_console" Background="Black" Foreground="White"></TextBlock>
    </ScrollViewer>
    
</Window>
